@model IEnumerable<EmployeeTrackingSystem.Models.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Email">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Email">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Email">Delete</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.Email">Details</a> 
                    }
                    @*<a asp-action="Edit" asp-route-id="@item.Email">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Email">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Email">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
